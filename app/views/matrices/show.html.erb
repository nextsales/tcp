<div class="row-fluid">
	<div class="span12">
		<h2 class="page-title"><%= @matrix.name %></h2>
		<p><%= @matrix.description %></p>
	</div>
</div>

<% if @matrix.companies.any? %>
<div class="row-fluid masonry_feed">
	<% @matrix.companies.each_with_index do |company, index| %>
  <div class="span6 box">
    <div class="body">
        <div class="row-fluid">
            <div class="span4">
                <div class="text-align-center">
                    <img src="<%= company.logo_url -%>">
                </div>
            </div>
            <div class="span8">
                <h3 class="no-margin"><%= company.name -%></h3>
								<p><%= company.industries.map(&:name).join(", ") -%></p>
								<p><%= company.competences.map(&:name).join(", ") -%></p>
								<p><%= company.description -%></p>
								<p><%= company.country %></p>
            </div>
        </div>
    </div>
  </div>
	<% end %>
</div>
<% end %>

<%= link_to edit_matrix_path(@matrix) , {:class => "btn btn-warning"} do %>
	<i class="icon-edit"></i> Edit
<% end %>

<%= link_to @matrix, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" do %>
	<i class="icon-trash"></i> Delete
<% end %>