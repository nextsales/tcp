<div class="row-fluid">
	<div class="span12">
		<h2 class="page-title">matrix</h2>
	</div>
</div>

<div class="row-fluid">
	<div class="span12">
		<section class="widget">
			<header>
				<h4><i class="icon-list-ol"></i> matrix</h4>
			</header>
			
			<div class="body">
				<table class="table table-striped table-images">
					<thead>
						<tr>
							<th class="hidden-phone-portrait">#</th>
              <th>Name</th>
              <th>Description</th>
							<th>Companies</th>
							<th>Keywords</th>
              <th></th>
						</tr>
					</thead>
					
					<tbody>
						<% @matrices.each do |matrix| %>
							<% if can? :read, matrix%>
								<tr>
									<td class="hidden-phone-portrait"><%= matrix.id %></td>
		              <td><%= link_to matrix.name, matrix %></td>
		              <td><%= matrix.description %></td>
									<td><%= raw(matrix.companies.map{ |company| raw(link_to(company.name, company)) }.join(', ')) %></td>
									<td><%= matrix.matrix_keywords.map(&:name).join(', ') %></td>
									<td>
										<% if can? :update, matrix%>
											<%= link_to edit_matrix_path(matrix), :class => "btn btn-small btn-primary" do %>
												<i class="icon-edit"></i> Edit
											<% end %>
											<%= link_to matrix, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-small btn-danger" do %>
											<i class="icon-trash"></i> Delete
											<% end %>
										<% end %>
									</td>
								</tr>
							<% end %>
						<% end %>
					</tbody>
				</table>
				
				<div class="clearfix">
					<div class="pull-right">
						<%= link_to new_matrix_path, {:class => "btn btn-success"} do %>
							<i class="icon-plus"></i> Create New matrix
						<% end %>
					</div>
					
					<div class="pagination no-margin">
						<ul>
							<li class="disabled"><a href="#">Prev</a></li>
              <li class="active"><a href="#">1</a></li>
              <li><a href="#">2</a></li>
              <li><a href="#">3</a></li>
              <li><a href="#">4</a></li>
              <li><a href="#">Next</a></li>
						</ul>
					</div>
				</div>
			</div>
		</section>
	</div>
</div>

