<div class="row-fluid">
	<div class="span12">
		<section class="widget large">
			<header>
				<h4><i class="eicon-share"></i>Feed</h4>
        <div class="actions">
            <button class="btn btn-transparent btn-mini">Show All <i class="icon-arrow-down"></i></button>
        </div>
			</header>
			
			<div class="body">
 				<div id="feed" class="feed">
					<div class="wrapper">
						<div class="vertical-line"></div>
						
						<% @feeds.each do |feed| %>
						<section class="feed-item">
							<div class="feed-item-body">
								<div class="text">
									<%= render_linkedin_feed_content(feed.raw_data) %>
								</div>
								<div class="time pull-left">
									<%= feed.created_at %>
								</div>
						  </div>
						</section>
						<% end %>
						
						<section class="feed-item">
							<div class="icon pull-left">
								<i class="icon-arrow-down"></i>
							</div>
							<div class="feed-item-body">
								<div class="text">
									<a href="#">Load more...</a>
								</div>
							</div>
            </section>
					
					</div>
				</div>
			</div>
		</section>
	</div>
</div>
