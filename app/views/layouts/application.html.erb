<!DOCTYPE html>
<html>
<head>
  <title>Tcp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class="background-dark <%= controller_name -%> <%= action_name -%>">

	<% if user_signed_in? %>
		<div class="logo">
		    <h4><a href="/">TopCompetitors</a></h4>
		</div>
		<%= render 'layouts/sidebar' %>
		<%= render 'layouts/navbar_header' %>

		<div class="wrap">
			<div class="content container-fluid">
				<%= yield %>
			</div>
		</div>
	
	<% else %>
		<%= yield %>
	<% end %>
</body>
</html>
