<% @companies.each do |company| %>
	<p><%= link_to company.name, company %></p>
<% end %>

<% @linkedin_companies.each do |company| %>
	<p><%= company.name %> <%= company.id %></p>
	<p><%= company.specialties.all.join(", ") if company.specialties %></p>
	<p><%= company.locations.all.map(&:address).map(&:city).uniq.join(", ") if company.locations %></p>
	<p><%= company.logo_url if company.logo_url %></p>
	<p><%= company.industries.all.map(&:name).join(", ") if company.industries %></p>
	<p>------------------</p>
<% end %>

