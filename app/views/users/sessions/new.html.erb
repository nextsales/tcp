<section class="widget login-widget">
    <header class="text-align-center">
        <h4>Login to your account</h4>
    </header>
    <div class="body">
				<%= form_for(resource, :html => {:class => "no-margin"}, :as => resource_name, :url => session_path(resource_name)) do |f| %>
            <fieldset>
                <div class="control-group no-margin">
                    <label class="control-label" for="email" >Email</label>
                    <div class="control">
                        <div class="input-prepend input-padding-increased">
                            <span class="add-on"><i class="eicon-user icon-large"></i></span>
                            <%= f.email_field :email, {:placeholder => "Email", :autofocus => true} %>
                        </div>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="password" >Password</label>
                    <div class="control">
                        <div class="input-prepend input-padding-increased">
                            <span class="add-on"><i class="icon-lock icon-large"></i></span>
                            <%= f.password_field :password, {:class => "input-large span10", :placeholder => "Password"} %>
                        </div>
                    </div>
                </div>
            </fieldset>
            <div class="form-actions">
                <button type="submit" class="btn btn-block btn-large btn-danger">
                    <span class="small-circle"><i class="icon-caret-right"></i></span>
                    <small>Sign In</small>
                </button>
								<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
									<div class="forgot"><%= link_to "Forgot your password?", new_password_path(resource_name), :class => "forgot" %></div>
								<% end -%>
            </div>
				<% end %>
    </div>
    <footer>
        <div class="linkedin-login">
            <a href="/users/auth/linkedin"><span><i class="icon-linkedin-sign icon-large"></i> Login with Linkedin</span></a>
        </div>
        <div class="twitter-login">
            <a href="/users/auth/twitter"><span><i class="icon-twitter-sign icon-large"></i> Login with Twitter</span></a>
        </div>
    </footer>
</section>


