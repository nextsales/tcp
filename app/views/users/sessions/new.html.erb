<div class="container-fluid">
	<div class="row-fluid">
		<div class="row-fluid">
			<div class="login-box">
				<%= render "users/shared/toplinks" %>
				
				<h2>Login to your account</h2>
				<%= form_for(resource, :html => {:class => "form-horizontal"}, :as => resource_name, :url => session_path(resource_name)) do |f| %>
					<fieldset>
						
						<div class="input-prepend" title="Username">
							<span class="add-on"><i class="halflings-icon user"></i></span>
							<%= f.email_field :email, {:class => "input-large span10", :placeholder => "Email", :autofocus => true} %>
						</div>
					
						<div class="clearfix"></div>

						<div class="input-prepend" title="Password">
							<span class="add-on"><i class="halflings-icon lock"></i></span>
							<%= f.password_field :password, {:class => "input-large span10", :placeholder => "Password"} %>
						</div>
					
						<div class="clearfix"></div>
					
						<label class="remember" for="remember"><%= f.check_box :remember_me %>Remember me</label>

						<div class="button-login">
							<%= f.submit "Sign in", :class => "btn btn-primary" %>
						</div>
					
						<%= render "users/shared/links" %>
						
					</fieldset>
				<% end %>
			</div><!--/span-->
		</div><!--/row-->
	</div><!--/fluid-row-->
</div><!--/.fluid-container-->


