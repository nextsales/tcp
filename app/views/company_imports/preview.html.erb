<div class="row-fluid">
	<div class="span12">
		<section class="widget">
			<header>
				<h4><i class="icon-table"></i> Preview</h4>
			</header>
			<div class="body">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>Name</th>
							<th>Description</th>
							<th>Linkedin</th>
							<th>Twitter</th>
							<th>Facebook</th>
							<th>Industry</th>
							<th>Competence</th>
							<th>Country</th>
							<th>Actions</th>
							<th>Note</th>
						</tr>
					</thead>
					<tbody>

						<% @imported_companies.each do |company| %>
						<tr>
							<td><%= company.name%></td>
							<td><%= company.description %></td>
							<td><%= company.linkedin_id %></td>
							<td><%= company.twitter_id %></td>
							<td><%= company.facebook_id %></td>
							<td><%= company.industries.map(&:name).join(", ") %></td>
							<td><%= company.competences.map(&:name).join(", ") %></td>
							<td><%= company.country %></td>
							<% if company.exist?%>
							<td>
								<div class="btn-group">
									<%= link_to company, :class => "btn" do %>
									<i class="icon-refresh"></i>
									<% end %>
									<%= link_to company, :class => "btn" do %>
									<i class="icon-remove"></i>
									<% end %>
								</div>
							</td>
							<td><span class="badge badge-important">existed</span></td>
							<% else %>
							<td>
								<a href="#" class="imported_company btn btn-inverse" data-name="<%= company.name%>" data-description="<%= company.description %>" data-linkedinid="<%= company.linkedin_id %>" data-twitterid="<%= company.twitter_id %>" data-facebookid="<%= company.facebook_id %>" data-logourl="<%= company.logo_url %>"><i class="icon-plus"></i> Add</a>
								<div class="btn-group">
									<!--
									<%= link_to company, :class => "btn" do %>
									<i class="icon-plus"></i>
									<% end %>
									<% if company.linkedin_id%>
									<%= link_to company, :class => "btn" do %>
									<i class="icon-linkedin"></i>
									<% end %>
									<% end %>
									-->
								</div>
							</td>
							<td><span class="badge badge-success">new</span></td>
							<% end %>
						</tr>
						<% end %>

					</tbody>
				</table>
				<blockquote>
					No distraction. Perfect. Just add <code>.table</code> class.
				</blockquote>

				<div>
					<%= link_to new_company_path, {:class => "btn btn-warning", remote: true, "data-backdrop" => "false", "data-toggle" => "modal", "data-target" => "#create_company_modal" } do %>
					<i class="icon-plus"></i> Cancel (not working)
					<% end %>

					<%= link_to new_company_import_path, {:class => "btn btn-inverse", remote: true, "data-backdrop" => "false", "data-toggle" => "modal", "data-target" => "#import_companies_modal"} do %>
					<i class="icon-exchange"></i> Import anyway (not working)
					<% end %>
				</div>
			</div>
		</section>
	</div>
</div>


