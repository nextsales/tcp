<%= link_to "Import all anyway", new_company_import_path, {:class => "btn btn-small", :style => "float:right;margin-top:10px"} %>
<h1>Previewing the companies in the datafile</h1>
<div class="row-fluid sortable">
  <div class="box span12">
    <div class="box-content">
			<table class="table table-striped table-bordered bootstrap-datatable datatable">
				<thead>
					<tr>
						<th>Name</th>
						<th>Description</th>
						<th>Industry</th>
						<th>Competence</th>
						<th>Actions</th>
						<th>Note</th>
					</tr>
				</thead>

				<tbody>
					<% @imported_companies.each do |company| %>
					<tr>
						
						<td><%= company.name%></td>
						<td class="center"><%= company.description %></td>
						<td class="center"><%= company.industries.map(&:name).join(", ") %></td>
						<td class="center"><%= company.competences.map(&:name).join(", ") %></td>
						<% if company.exist?%>
							<td class="center">
								<div class="btn-group">
									<%= link_to company, :class => "btn" do %>
										<i class="icon-refresh"></i>
									<% end %>
									<%= link_to company, :class => "btn" do %>
										<i class="icon-remove"></i>
									<% end %>
								</div>
							</td>
							<td class="center"><%= "This company exists in the system" %></td>
									
						<% else %>
							<td class="center">
								<div class="btn-group">
									<%= link_to company, :class => "btn" do %>
										<i class="icon-plus"></i>
									<% end %>
									<% if company.linkedin_id%>
										<%= link_to company, :class => "btn" do %>
											<i class="icon-linkedin"></i>
										<% end %>
									<% end %>
								</div>
							</td>
							<td class="center"><%= "This company is new" %></td>
						<% end %>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div><!--/span-->
</div><!--/row-->

