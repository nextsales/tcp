<div class="row-fluid">
	<div class="span12">
		<section class="widget">
			<header>
				<h4><i class="icon-file-alt"></i> Competence</h4>
			</header>
			<div class="body">
				<table id="competeneces_datatable" class="table table-striped" data-source="<%= competences_url(format: "js") %>">
					<thead>
						<tr>
							<th>Id</th>
							<th>Name</th>
							<th>Description</th>
						</tr>
					</thead>
				</table>

				<div>
            <%= link_to new_competence_path, {:class => "btn btn-warning", remote: true, "data-backdrop" => "false", "data-toggle" => "modal", "data-target" => "#create_competence_modal" } do %>
							<i class="icon-plus"></i> Add new
						<% end %>
						
						<% if can? :manage, :all %>
						<%= link_to new_competence_import_path, {:class => "btn btn-inverse"} do %>
							<i class="icon-exchange"></i> Import
						<% end %>
						<% end %>
						
						<%= render("modal_form") %>
        </div>
				
			</div>
		</section>
	</div>
</div>