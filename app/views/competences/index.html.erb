<%= link_to new_competence_path, {:class => "btn btn-small", :style => "float:right;margin-top:10px"} do %>
	<i class="icon-plus"></i> New
<% end %>
<h1>Competence</h1>
<div class="row-fluid sortable">
  <div class="box span12">
    <div class="box-content">
			<table class="table table-striped table-bordered bootstrap-datatable datatable">
				<thead>
					<tr>
						<th>Name</th>
						<th>Description</th>
						<th>Actions</th>
					</tr>
				</thead>

				<tbody>
					<% @competences.each do |competence| %>
					<tr>
						<% if can? :read, competence%>
						<td><%= link_to competence.name, competence %></td>
						<td class="center"><%= competence.description %></td>
						<td class="center">
							<div class="btn-group">
								<% if can? :update, competence%>
									<%= link_to edit_competence_path(competence), :class => "btn" do %>
									<i class="icon-edit"></i>
									<% end %>
								<% end %>
								
								<% if can? :update, competence%>
									<%= link_to competence, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn" do %>
									<i class="icon-trash"></i>
									<% end %>
								<% end %>
							</div>
						</td>
						<% end %>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div><!--/span-->
</div><!--/row-->
