<div class="row-fluid">
	<div class="span12">
		<h2 class="page-title">Competence</h2>
	</div>
</div>

<div class="row-fluid">
	<div class="span12">
		<section class="widget">
			<header>
				<h4><i class="icon-list-ol"></i> Competence</h4>
			</header>
			
			<div class="body">
				<table class="table table-striped table-images">
					<thead>
						<tr>
							<th class="hidden-phone-portrait">#</th>
              <th>Name</th>
              <th>Description</th>
              <th></th>
						</tr>
					</thead>
					
					<tbody>
						<% @competences.each do |competence| %>
							<% if can? :read, competence%>
								<tr>
									<td class="hidden-phone-portrait"><%= competence.id %></td>
		              <td><%= link_to competence.name, competence %></td>
		              <td><%= competence.description %></td>
									<td>
										<% if can? :update, competence%>
											<%= link_to edit_competence_path(competence), :class => "btn btn-small btn-primary" do %>
												<i class="icon-edit"></i> Edit
											<% end %>
											<%= link_to competence, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-small btn-danger" do %>
											<i class="icon-trash"></i> Delete
											<% end %>
										<% end %>
									</td>
								</tr>
							<% end %>
						<% end %>
					</tbody>
				</table>
				
				<div class="clearfix">
					<div class="pull-right">
						<%= link_to new_competence_path, {:class => "btn btn-success", remote: true, "data-toggle" => "modal", "data-target" => "#create_competence_modal" } do %>
							<i class="icon-plus"></i> Create New Competence
						<% end %>
						
						<% if can? :manage, :all %>
							<%= link_to "Import compentencies", new_competence_import_path, {:class => "btn btn-small", :style => "float:right;margin-top:10px"} %>
						<% end %>
						
						<%= render("ajax_form") %>
					</div>
					
					<div class="pagination no-margin">
						<ul>
							<li class="disabled"><a href="#">Prev</a></li>
              <li class="active"><a href="#">1</a></li>
              <li><a href="#">2</a></li>
              <li><a href="#">3</a></li>
              <li><a href="#">4</a></li>
              <li><a href="#">Next</a></li>
						</ul>
					</div>
				</div>
			</div>
		</section>
	</div>
</div>
