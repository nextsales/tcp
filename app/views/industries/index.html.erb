<div class="row-fluid">
	<div class="span12">
		<h2 class="page-title">industry</h2>
	</div>
</div>

<div class="row-fluid">
	<div class="span12">
		<section class="widget">
			<header>
				<h4><i class="icon-list-ol"></i> industry</h4>
			</header>
			
			<div class="body">
				<table class="table table-striped table-images">
					<thead>
						<tr>
							<th class="hidden-phone-portrait">#</th>
              <th>Name</th>
              <th>Description</th>
              <th></th>
						</tr>
					</thead>
					
					<tbody>
						<% @industries.each do |industry| %>
							<% if can? :read, industry%>
								<tr>
									<td class="hidden-phone-portrait"><%= industry.id %></td>
		              <td><%= link_to industry.name, industry %></td>
		              <td><%= industry.description %></td>
									<td>
										<% if can? :update, industry%>
											<%= link_to edit_industry_path(industry), :class => "btn btn-small btn-primary" do %>
												<i class="icon-edit"></i> Edit
											<% end %>
											<%= link_to industry, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-small btn-danger" do %>
											<i class="icon-trash"></i> Delete
											<% end %>
										<% end %>
									</td>
								</tr>
							<% end %>
						<% end %>
					</tbody>
				</table>
				
				<div class="clearfix">
					<div class="pull-right">
						<%= link_to new_industry_path, {:class => "btn btn-success"} do %>
							<i class="icon-plus"></i> Create New industry
						<% end %>
					</div>
					
					<div class="pagination no-margin">
						<ul>
							<li class="disabled"><a href="#">Prev</a></li>
              <li class="active"><a href="#">1</a></li>
              <li><a href="#">2</a></li>
              <li><a href="#">3</a></li>
              <li><a href="#">4</a></li>
              <li><a href="#">Next</a></li>
						</ul>
					</div>
				</div>
			</div>
		</section>
	</div>
</div>
