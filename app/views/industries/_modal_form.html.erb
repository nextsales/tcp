<div id="create_industry_modal", class="modal hide fade">
	<%= form_for (@industry), :html => {:class => "form-horizontal"} do |f| %>
	
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
		<h4>New Industry</h4>
  </div>

  <div class="modal-body">
		<fieldset>
			<div class="control-group">
				<%= f.label :name, {:class => "control-label"} %>
				<div class="controls">
					<%= f.text_field :name, {:class => "input-xlarge focused"} %>
				</div>
			</div>

			<div class="control-group">
				<%= f.label :description, {:class => "control-label"} %>
				<div class="controls">
					<%= f.text_area :description, {:class => "input-xlarge"} %>
				</div>
			</div>

		</fieldset>
  </div>

	<div class="modal-footer">
		<%= link_to 'Cancel', industries_path, {:class => "btn", "data-dismiss" => "modal", "aria-hidden" => "true"} %>
		<%= f.submit "Save  changes", :class => "btn btn-primary" %>
	</div>
	
	<% end %> 
</div>
